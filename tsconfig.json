{
	"compilerOptions": {
		"moduleResolution": "bundler",
    	"noImplicitAny": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"isolatedModules": true,
		"target": "es6",
		"lib": [
			"dom",
			"dom.Iterable",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"esnext"
		],
    	"outDir": "src/main/resources/ts/dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			],
			"@component/*": [
				"./view/js/component/*"
			],
			"@handler/*": [
				"./view/js/handler/*"
			],
			"@root/*": [
				"./view/*"
			]
		},
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	
}