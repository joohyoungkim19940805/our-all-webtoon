{
    "compilerOptions": {
		"moduleResolution": "Node",
    	"noImplicitAny": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"isolatedModules": true,
		"target": "es5",
		"lib": [
		  "dom", 
		  "dom.Iterable",
		  "ES2015",
		  "ES2016",
		  "ES2017",
		  "ES2018",
		  "ES2019",
		  "ES2020",
		  "esnext"
		],
    	"outDir": "view/js/ts",
		"baseUrl": ".",
    	"paths": {
    		"*": ["node_modules/*"],
			"@component/*": ["./view/js/component/*"],
			"@handler/*" : ["./view/js/handler/*"],
			"@root/*": ["./view/*"]
    	},
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./types"]
    }
}